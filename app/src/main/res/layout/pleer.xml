<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Player" android:background="@drawable/default_image">
    <ImageButton
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevFolder"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextFolder"
            android:onClick="imageButton"
    />
    <Button
            android:id="@+id/buttonPrevFolder"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/prev_folder"/>
    <Button
            android:id="@+id/buttonNextFolder"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/next_folder"/>
    <TextView
            android:text="folderName"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/textViewFolderName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.433"/>
    <TextView
            android:text="bandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBandName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintTop_toBottomOf="@+id/textViewFolderName"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTrackName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBandName"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.433"/>
    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="270dp"
            android:layout_height="31dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackName"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewTrackTime"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewCurrentTrackTime"
            app:layout_constraintHorizontal_bias="0.465"/>
    <Button
            android:id="@+id/buttonPause"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintEnd_toStartOf="@+id/buttonStop"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            android:background="@drawable/pause"/>
    <Button
            android:id="@+id/buttonResume"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintEnd_toStartOf="@+id/buttonStop"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            android:background="@drawable/play"/>
    <Button
            android:id="@+id/buttonPlay"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintEnd_toStartOf="@+id/buttonStop"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            android:background="@drawable/play"/>
    <Button
            android:id="@+id/buttonPrevTrack"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPlay"
            app:layout_constraintHorizontal_bias="0.585"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            android:background="@drawable/prev_track"/>
    <Button
            android:id="@+id/buttonStop"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextTrack"
            android:layout_marginEnd="24dp"
            android:background="@drawable/stop"/>
    <Button
            android:id="@+id/buttonNextTrack"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginTop="4dp"
            android:background="@drawable/next_track"/>
    <TextView
            android:text=""
            android:layout_width="29dp"
            android:layout_height="31dp"
            android:id="@+id/textViewCurrentTrackTime"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text=""
            android:layout_width="29dp"
            android:layout_height="31dp"
            android:id="@+id/textViewTrackTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackName"
            android:layout_marginTop="16dp"/>
    <Button
            android:id="@+id/buttonEqualizer"
            android:onClick="equalizer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/equalizer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPause"
            android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/buttonSoundOff"
            android:onClick="soundOff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sound_off"
            app:layout_constraintStart_toEndOf="@+id/buttonEqualizer"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPause"
            android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/buttonSoundOn"
            android:onClick="soundOn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sound_on"
            app:layout_constraintStart_toEndOf="@+id/buttonEqualizer"
            android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPause"
            android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/buttonRepeatOn"
            android:onClick="repeatOn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/repeat"
            app:layout_constraintStart_toEndOf="@+id/buttonSoundOff"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.631"
            app:layout_constraintTop_toBottomOf="@+id/buttonPause"
            android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/buttonRepeatOff"
            android:onClick="repeatOff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/repeat_off"
            app:layout_constraintStart_toEndOf="@+id/buttonSoundOff"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.631"
            app:layout_constraintTop_toBottomOf="@+id/buttonPause"
            android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

